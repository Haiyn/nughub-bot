{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./*"],
      "@services/*": ["services/*"],
      "@commands/*": ["commands/*"],
      "@models/*": ["models/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules", "dist"
  ]
}